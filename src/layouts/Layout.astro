    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Calculate the true ROI of solar panels in Australia. 25-year expected value analysis with battery storage, TOU pricing, and federal rebates." />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  </head>
  <body class="bg-slate-50 min-h-screen flex flex-col">
  <!-- Google Tag Manager (noscript) -->
<noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-5RMZ55TM"
height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
<!-- End Google Tag Manager (noscript) -->
    <!-- Header -->
    <header class="bg-white border-b border-slate-200 sticky top-0 z-50">
      <div class="max-w-7xl mx-auto px-4 md:px-8">
        <div class="flex items-center justify-between h-16">
          <!-- Logo -->
          <a href="/" class="flex items-center gap-2 group">
            <svg width="36" height="32" viewBox="0 0 36 32" fill="none" xmlns="http://www.w3.org/2000/svg" class="transition group-hover:scale-105">
              <rect x="1" y="5" width="10" height="10" rx="2" fill="#1e40af"/>
              <rect x="13" y="5" width="10" height="10" rx="2" fill="#2563eb"/>
              <rect x="25" y="5" width="7" height="10" rx="2" fill="#3b82f6"/>
              <rect x="1" y="17" width="10" height="10" rx="2" fill="#2563eb"/>
              <rect x="13" y="17" width="10" height="10" rx="2" fill="#1e40af"/>
              <rect x="25" y="17" width="7" height="10" rx="2" fill="#2563eb"/>
              <circle cx="30" cy="7" r="4" fill="#f59e0b"/>
            </svg>
            <span class="font-bold text-lg text-slate-900">Solar<span class="text-blue-600">Math</span></span>
          </a>
          
          <!-- Nav -->
          <nav class="hidden md:flex items-center gap-8">
            <a href="/" class="text-sm font-medium text-slate-600 hover:text-slate-900 transition">Calculator</a>
            <a href="/methodology" class="text-sm font-medium text-slate-600 hover:text-slate-900 transition">Methodology</a>
            <a href="/about" class="text-sm font-medium text-slate-600 hover:text-slate-900 transition">About</a>
          </nav>

          <!-- Mobile menu button -->
          <button class="md:hidden p-2 text-slate-600 hover:text-slate-900" id="mobile-menu-btn">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
            </svg>
          </button>
        </div>

        <!-- Mobile nav -->
        <div class="hidden md:hidden pb-4" id="mobile-menu">
          <nav class="flex flex-col gap-2">
            <a href="/" class="text-sm font-medium text-slate-600 hover:text-slate-900 py-2">Calculator</a>
            <a href="/methodology" class="text-sm font-medium text-slate-600 hover:text-slate-900 py-2">Methodology</a>
            <a href="/about" class="text-sm font-medium text-slate-600 hover:text-slate-900 py-2">About</a>
          </nav>
        </div>
      </div>
    </header>

    <!-- Main content -->
    <main class="flex-1">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-slate-900 text-slate-400 mt-auto">
      <div class="max-w-7xl mx-auto px-4 md:px-8 py-12">
        <div class="grid md:grid-cols-4 gap-8">
          <!-- Brand -->
          <div class="md:col-span-2">
            <a href="/" class="flex items-center gap-2 mb-4">
              <svg width="32" height="28" viewBox="0 0 36 32" fill="none" xmlns="http://www.w3.org/2000/svg">
                <rect x="1" y="5" width="10" height="10" rx="2" fill="#1e40af"/>
                <rect x="13" y="5" width="10" height="10" rx="2" fill="#2563eb"/>
                <rect x="25" y="5" width="7" height="10" rx="2" fill="#3b82f6"/>
                <rect x="1" y="17" width="10" height="10" rx="2" fill="#2563eb"/>
                <rect x="13" y="17" width="10" height="10" rx="2" fill="#1e40af"/>
                <rect x="25" y="17" width="7" height="10" rx="2" fill="#2563eb"/>
                <circle cx="30" cy="7" r="4" fill="#fbbf24"/>
              </svg>
              <span class="font-bold text-lg text-white">Solar<span class="text-blue-400">Math</span></span>
            </a>
            <p class="text-sm text-slate-500 max-w-sm">
              Honest solar calculations for Australian homeowners. No sales pitch, just math.
            </p>
          </div>

          <!-- Links -->
          <div>
            <h4 class="text-sm font-semibold text-slate-300 mb-4">Calculator</h4>
            <ul class="space-y-2 text-sm">
              <li><a href="/" class="hover:text-white transition">Solar ROI Calculator</a></li>
              <li><a href="/methodology" class="hover:text-white transition">Methodology</a></li>
              <li><a href="/what-is-tou-pricing" class="hover:text-white transition">TOU Pricing</a></li>
            </ul>
          </div>

          <div>
            <h4 class="text-sm font-semibold text-slate-300 mb-4">Info</h4>
            <ul class="space-y-2 text-sm">
              <li><a href="/about" class="hover:text-white transition">About</a></li>
              <li><a href="/privacy" class="hover:text-white transition">Privacy</a></li>
              <li><a href="/disclaimer" class="hover:text-white transition">Disclaimer</a></li>
              <li><a href="mailto:hello@solarmath.com.au" class="hover:text-white transition">Contact</a></li>
            </ul>
          </div>
        </div>
      </div>
    </footer>

    <script>
      const btn = document.getElementById('mobile-menu-btn');
      const menu = document.getElementById('mobile-menu');
      btn?.addEventListener('click', () => {
        menu?.classList.toggle('hidden');
      });
    </script>

    <style is:global>
      html {
        font-family: 'Inter', system-ui, sans-serif;
        scroll-behavior: smooth;
      }
      
      body {
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
      }
    </style>
  </body>
</html>