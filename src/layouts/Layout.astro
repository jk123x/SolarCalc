---
interface Props { title: string; }
const { title } = Astro.props;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap" rel="stylesheet">
	</head>
	<body class="bg-[#f8fafc] font-['Inter',sans-serif] text-slate-900 antialiased min-h-screen">
		<nav class="bg-white border-b border-slate-200 py-6 mb-12 shadow-sm">
			<div class="max-w-7xl mx-auto px-6 flex justify-between items-center">
				<div class="flex items-center gap-2">
					<div class="bg-blue-600 p-1.5 rounded-lg">☀️</div>
					<span class="text-2xl font-extrabold tracking-tight">Solar<span class="text-blue-600">EV</span></span>
				</div>
				<div class="hidden md:flex gap-8 text-sm font-semibold text-slate-500 uppercase tracking-widest">
					<a href="#" class="hover:text-blue-600">Calculator</a>
					<a href="#" class="hover:text-blue-600">Guide</a>
					<a href="#" class="hover:text-blue-600">Pricing</a>
				</div>
			</div>
		</nav>
		<main class="max-w-7xl mx-auto px-6 pb-24">
			<slot />
		</main>
	</body>
</html>