---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import SolarEVCalculator from '../components/SolarEVCalculator';
---

<Layout title="Solar Panel Decision Calculator | Expected Value Analysis">
  <SolarEVCalculator client:load />
</Layout>

<section id="signup" class="mt-12 bg-blue-900 rounded-2xl p-8 text-white text-center">
  <h2 class="text-3xl font-bold mb-4">Want the Full 25-Year Projection PDF?</h2>
  <p class="text-blue-100 mb-8 max-w-2xl mx-auto">
    We'll send you a detailed breakdown of your specific ROI, including state-specific maintenance schedules and the "Hidden Costs" of solar maintenance in Australia.
  </p>
  <form class="flex flex-col sm:flex-row gap-4 justify-center max-w-md mx-auto">
    <input 
      type="email" 
      placeholder="Enter your email" 
      class="px-4 py-3 rounded-lg text-slate-900 flex-grow outline-none focus:ring-2 focus:ring-yellow-400"
    />
    <button class="bg-yellow-500 hover:bg-yellow-400 text-blue-900 font-bold px-8 py-3 rounded-lg transition shadow-lg">
      Send My Guide
    </button>
  </form>
</section>